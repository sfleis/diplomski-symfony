{% extends "./base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="text-6xl pt-12 pb-8">
                Books ({{ books|length }})
            </h1>

           
        </div>
    </div>

    <div class="mx-auto w-4/5 my-8 text-center">
        <a 
            href="/books/create" 
            class="uppercase border border-gray-500 text-lg py-4 px-6 rounded transition transition-all bg-gray-800 text-white hover:bg-white hover:text-gray-800">
            Add New Book 
        </a>
    </div>
    <div class="md:grid lg:grid-cols-3 gap-20 w-4/5 mx-auto py-15 ">
        <!-- Review Item -->
        {% for book in books %}
            <div class="text-center pt-8 pb-4">
                <img
                    src="{{ book.imagePath }}"
                    alt=""
                    class="shadow-xl rounded-md"
                />

                <h2 class="text-gray-700 font-bold text-3xl py-2">
                    {{ book.title }}
                </h2>

                <span class="text-gray-500">
                    By 
                    <span class="italic text-sm text-gray-800">
                        {% for author in book.authors %}
                            {{ author.name }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    </span>
                </span>

                <p class="text-base text-gray-700 pt-4 pb-10 leading-8 font-light">
                    {{ book.description }}
                </p>

                <a href="/books/{{ book.id }}" class="uppercase border border-gray-500 text-gray-600 text-lg py-4 px-12 rounded transition transition-all hover:bg-gray-800 hover:text-white">
                    SHOW
                </a>
            </div>
        {% endfor %}
    </div>
{% endblock %}